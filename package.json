{
  "name": "task-pipeliner",
  "version": "0.3.1",
  "description": "A task pipeline runner with condition-based workflow execution",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "task-pipeliner": "./dist/index.cjs",
    "tp": "./dist/index.cjs"
  },
  "scripts": {
    "build": "pnpm build:napi && pnpm build:ts && pnpm build:cleanup",
    "build:napi": "napi build dist --cargo-cwd rust --release",
    "build:ts": "tsup",
    "build:cleanup": "rm -f ./task-pipeliner*.node ./index.d.ts",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"scripts/**/*.{ts,js}\" \"*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"scripts/**/*.{ts,js}\" \"*.{ts,js,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "workflow-orchestration",
    "workflow",
    "orchestration",
    "task-runner",
    "task-automation",
    "ci-cd",
    "build-automation",
    "devops",
    "automation",
    "pipeline",
    "workflow-engine",
    "yaml",
    "json",
    "scheduler",
    "cron",
    "cli",
    "interactive",
    "makefile-alternative",
    "bash-alternative",
    "deployment",
    "build-tool"
  ],
  "author": "racgoo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/racgoo/task-pipeliner.git"
  },
  "homepage": "https://task-pipeliner.racgoo.com",
  "bugs": {
    "url": "https://github.com/racgoo/task-pipeliner/issues"
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cronstrue": "^3.11.0",
    "dayjs": "^1.11.19",
    "inquirer": "^8.2.6",
    "log-update": "^4.0.0",
    "node-cron": "^4.2.1",
    "ora": "^5.4.1",
    "yaml": "^2.3.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.16.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^1.1.0"
  },
  "napi": {
    "name": "task-pipeliner-rs",
    "packageName": "task-pipeliner-rs",
    "outputDir": "./dist",
    "triples": {
      "defaults": true,
      "additional": []
    }
  },
  "files": [
    "dist"
  ],
  "pkg": {
    "noBytecode": true,
    "assets": [
      "dist/**/*.node",
      "package.json",
      "node_modules/chalk/**/*",
      "node_modules/boxen/**/*",
      "node_modules/yaml/**/*"
    ],
    "scripts": [
      "node_modules/chalk/**/*.js",
      "node_modules/boxen/**/*.js",
      "node_modules/yaml/**/*.js"
    ],
    "targets": [
      "node18-macos-arm64",
      "node18-macos-x64",
      "node18-linux-x64",
      "node18-win-x64"
    ]
  },
  "packageManager": "pnpm@10.26.1"
}
